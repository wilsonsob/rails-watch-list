<div class='img-container'>
  <img class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4))" src="../../assets/background.jpg">
    <h1><span id="banner-typed-text">Save any kind of movie </span></h1>
</div>


<div class="container">
  <div class="d-flex">
    <h2>My list</h2>
    <p><%= link_to 'Add a new List', new_list_path %></p>
    <div class="row">
      <div class="card" style="width: 20rem;">
        <% @lists.each do |list| %>
          <div class="col-12 col-sm-6">
            <div class="card" style="width: 20rem;">
              <div class="card-body">
          <%= link_to list.name, list_path(list) %>
              </div>
        <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
